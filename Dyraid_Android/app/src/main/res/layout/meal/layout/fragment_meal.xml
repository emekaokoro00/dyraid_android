<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:id="@+id/natural"
                android:layout_width="0dp"
                android:layout_height="300dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:background="@drawable/sea">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/imageLinear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="81dp"
                tools:layout_editor_absoluteX="8dp"
                app:layout_constraintHorizontal_bias="0.5">
                <custom_overrides.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/un"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#cccccc"/>
                <custom_overrides.TextViewNP
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:textSize="20dp"
                    android:textColor="@color/weekcolor"
                    android:letterSpacing="0.025"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
                <custom_overrides.TextViewNP
                    android:id="@+id/mTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Agenda"
                    android:letterSpacing="0.025"
                    android:textSize="14dp"
                    android:textColor="@color/agendacolor"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/imageLinear2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/natural"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/ic_technology_5"
                        android:layout_gravity="center"/>
                    <custom_overrides.TextViewNP
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 a.m"
                        android:textSize="14dp"
                        android:textColor="@color/timecolor"
                        android:letterSpacing="0.025"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <custom_overrides.TextViewNP
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wake Up"
                            android:textColor="@color/schedulecolor"
                            android:letterSpacing="0.025"
                            android:layout_marginLeft="30dp"
                            android:textSize="14dp"/>
                        <custom_overrides.TextViewNP
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Morning Schedule Time"
                            android:textColor="@color/statementcolor"
                            android:letterSpacing="0.025"
                            android:layout_marginLeft="30dp"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/View1"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#99A1AC"
                    android:layout_marginTop="20dp"/>


                <ListView
                    android:id="@+id/mLogListView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/View1"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#99A1AC"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_three"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <custom_overrides.TextViewNP
        android:id="@+id/nameTextView"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anon"
        android:layout_gravity="center"
        android:gravity="center"
        android:letterSpacing="0.025"
        android:textColor="@color/dpnamecolor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="18dp"/>

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_tool_2"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"/>

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_plus"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>